 <body> 
  <h1>Daily Lotto Number Generator</h1> <button onclick="generateNumbers()">Generate 3-Digit Lotto Number</button> 
  <div id="result"></div> 
  <script>
        function generateNumbers() {
            // Generate 3 random digits between 0 and 9
            const digit1 = Math.floor(Math.random() * 10); // Random number between 0 and 9
            const digit2 = Math.floor(Math.random() * 10); // Random number between 0 and 9
            const digit3 = Math.floor(Math.random() * 10); // Random number between 0 and 9

            // Combine the digits into a single string
            const lottoNumber = `${digit1}${digit2}${digit3}`;

            // Display the generated number in the result div
            document.getElementById('result').innerHTML = `Your Daily Lotto Number is: ${lottoNumber}`;
        }
    </script> 
 
</body></html>
